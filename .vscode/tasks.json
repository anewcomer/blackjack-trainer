{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Run build",
			"command": "npm run build",
			"group": "build",
			"problemMatcher": [
				"$tsc"
			],
			"isBackground": false
		},
		{
			"type": "shell",
			"label": "Run lint",
			"command": "npm run lint",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"clear": true
			},
			"problemMatcher": [
				"$eslint-stylish"
			],
			"isBackground": false
		},
		{
			"type": "shell",
			"label": "Run tests once",
			"command": "npm test -- --watchAll=false",
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"clear": true
			},
			"problemMatcher": [],
			"isBackground": false
		}
	]
}