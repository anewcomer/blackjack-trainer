{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Run build",
			"command": "npm run build",
			"group": "build",
			"problemMatcher": [
				"$tsc"
			],
			"isBackground": false
		},
		{
			"type": "shell",
			"label": "Start dev server",
			"command": "npm start",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"clear": true
			},
			"problemMatcher": [],
			"isBackground": true,
			"options": {
				"env": {
					"BROWSER": "none" // Prevents opening the browser automatically
				}
			}
		},
		{
			"type": "shell",
			"label": "Run lint",
			"command": "npm run lint",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"clear": true
			},
			"problemMatcher": [
				"$eslint-stylish"
			],
			"isBackground": false
		},
		{
			"type": "shell",
			"label": "Run lint fix",
			"command": "npx eslint --fix 'src/**/*.{js,jsx,ts,tsx}'",
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"clear": true
			},
			"problemMatcher": [
				"$eslint-stylish"
			],
			"isBackground": false
		}
	]
}